.Form-order
  // nothing here

.Form-input
  width 100%

select
  width 100%
  margin 0
  margin-left -12.75em

.Form-input--text
  padding .75em 0
  background transparent
  box-shadow rgba(0,0,0,0.3) 0 -1px 0 0 inset
  border none
  border-radius 0
  display flex
  outline none
  color rgba(0,0,0,0.8)
  height 3em

.Form-error--text
  text-transform lowercase
  font-size .8em
  padding .25em
  // color #2b0006
  color salmon

.Form-input--textarea
  vertical-align top
  resize vertical !important

textarea
  &::placeholder
    color rgba(0,0,0, 0.8)
  &:-ms-input-placeholder
    color rgba(0,0,0, 0.8)
  &::-ms-input-placeholder
    color rgba(0,0,0, 0.8)input

.Form-fieldset
  //

.Form-input--radio
  display none
  visibility hidden

.Form-input--round-lg
  border-radius 3px
  height 70px !important
  margin-bottom 1em

.Form-input--radioLabel
  font-size .75em
  font-family $font-family-sans-serif-alt
  display flex
  height 3em
  align-self flex-start
  color rgba(0,0,0,0.3)

.Form-input--radioLabel-lg
  display flex
  font-size 1em
  font-family $font-family-sans-serif
  font-weight 700
  padding 1em

.Form-header
  padding-bottom .65em

.Form-shipping-container
  display none

.Form-input--submit
  display none
  visibilty hidden

.Form-input--hidden
  display none
  visibility hidden

.Form-input--text-newsletter
  padding .75 em 0
  font-size 1em
  font-family $font-family-sans-serif
  font-weight 400
  background transparent
  box-shadow rgba(0, 0, 0, 0.2) 0 -1px 0 0 inset
  border none
  border-radius 0
  display flex
  outline none
  color #333
  height 3em

.Form-hidden
  position absolute
  left 0
  top -500px
  width 1px
  height 1px
  overflow hidden

input:-webkit-autofill, textarea:-webkit-autofill, select:-webkit-autofill
  // -webkit-box-shadow 0 0 0 30px white inset
  -webkit-text-fill-color rgba(0,0,0,0.9)
  border-bottom #424242

input
  &::placeholder
    color rgba(0,0,0, 0.4)
  &:-ms-input-placeholder
    color rgba(0,0,0, 0.4)
  &::-ms-input-placeholder
    color rgba(0,0,0, 0.4)
  &::selection
    background rgba(0,0,0, 0.3)
  &::-moz-selection
    background rgba(0,0,0, 0.3)

.Form-container
    display block
    position relative
    padding-left 35px
    margin-bottom 12px
    cursor pointer
    font-size 14px
    -webkit-user-select none
    -moz-user-select none
    -ms-user-select none
    user-select none
/* Hide the browser's default checkbox */
.Form-container input
    position absolute
    opacity 0
    cursor pointer
/* Create a custom checkbox */
.checkmark
    position absolute
    top -4px
    left 0
    height 22px
    width 22px
    background-color #eee
    border-radius 5px
    border 1px solid #ccc
    box-shadow 1px 1px 5px 1px rgba(0,0,0,0.20)
    transition .3s cubic-bezier(.4,0,.6,1)
/* When the checkbox is checked, add a blue background */
.Form-container .checkmark--active
    // background-color #2196F3
    background-color #4285f4
/* Create the checkmark/indicator (hidden when not checked) */
.checkmark--active:after
    content ""
    position absolute
    display none

/* Show the checkmark when checked */
.Form-container
  .checkmark:after
    display block
/* Style the checkmark/indicator */
.Form-container
  .checkmark:after
    left 6px
    top 1px
    width 7px
    height 14px
    border solid #fff
    border-width 0 3px 3px 0
    -webkit-transform rotate(45deg)
    -ms-transform rotate(45deg)
    transform rotate(45deg)