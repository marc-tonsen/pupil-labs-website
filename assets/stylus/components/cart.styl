$w = 8px
$smw = $w*.75
$scale = 1.2
$scaleRemove = 1.05
$removeSize = .65em


#Cart
  // nothing here - placeholder for jQuery


#Cart-table
  width 100%

  // padding-top 2em

.Cart-row
  // nothing here - placeholder for JQuery

.Cart-container
  // nothing here - placeholder for Jquery

.cart

  &.order
    width 60%

  &.form
    background-color rgb(91, 139, 238)
    width 40%

  @media $break-767
    &.order
      width 100%

    &.form
      background-color unset
      width 100%

    .Grid--gutters
      margin unset

    .Grid--gutters > .Grid-cell
      padding unset

  @media $break-320
    .Grid--gutters > .Grid-cell
      padding unset

.Cart-rowContainer
  margin-top .8em
  margin-bottom .8em
  border-bottom 1px solid gray
  padding-bottom 0.8em

  .Feature-figure--config
      width 60%
      height auto
      margin auto

  .Grid-cell--1of6
    .Cart-removeItem
      display none

  @media $break-767

    .Cart-removeItem
      display none

    .Grid-cell--1of6
      flex 0 0 100%

      .Cart-removeItem
        display block

    .Grid-cell--5of6
      flex 0 0 100%

      > .Grid:first-child
        width 50%

    .Feature-figure--config
        width 30%
        margin unset
        padding-bottom 10px

    .Grid-cell
      flex 1 0 100%

    .Grid-cell--1of2
      &.Grid-persist
        flex 0 0 50%


.Cart-items--3of5
  width (3/5)*100%
  text-align left

.Cart-items--1of5
  width (1/5)*100%
  text-align left

